<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenoid Parallel Tests">
    <listeners>
        <listener class-name="com.framework.listeners.TestExecutionListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <!-- Chrome Test -->
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="browserVersion" value="120.0"/>
        <classes>
            <class name="com.ui.SuccessfulRegisterTest"/>
        </classes>
    </test>

    <!-- Firefox Test -->
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <parameter name="browserVersion" value="115.0"/>
        <classes>
            <class name="com.ui.SuccessfulRegisterTest"/>
        </classes>
    </test>

    <!-- Edge Test -->
    <test name="Edge Tests">
        <parameter name="browser" value="edge"/>
        <parameter name="browserVersion" value="136.0.3240.76"/>
        <classes>
            <class name="com.ui.SuccessfulRegisterTest"/>
        </classes>
    </test>
</suite>
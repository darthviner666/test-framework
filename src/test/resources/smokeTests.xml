<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Tests" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <!-- Chrome Test -->
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="browserVersion" value="120.0"/>
        <classes>
            <class name="com.ui.SuccessfulRegisterTest"/>
        </classes>
    </test>

    <test name="API Tests" parallel="classes" thread-count="2">
        <classes>
            <class name="com.api.GetListUsersTest"/>
            <class name="com.api.CreateUserTest"/>
        </classes>
    </test>
</suite>
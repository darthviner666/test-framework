<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <!-- Консольный вывод с цветами -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{HH:mm:ss.SSS}}{cyan} [%t] %highlight{%-5level} %style{%logger{36}}{magenta} - %msg%n"/>
        </Console>

        <!-- Файловый лог с ротацией -->
        <RollingFile name="File" fileName="logs/selenide.log"
                     filePattern="logs/selenide-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <AllureLog4jAppender name="Allure"/>

        <!-- Логи для Allure -->
        <File name="AllureFile" fileName="target/allure-logs/test.log" append="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Основной логгер -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

        <!-- Детальные логи для Selenide -->
        <Logger name="com.codeborne.selenide" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Логи для Allure -->
        <Logger name="allure" level="INFO" additivity="false">
            <AppenderRef ref="AllureFile"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="Allure"/>
        </Root>

        <!-- Уменьшаем уровень логирования для шумных библиотек -->
        <Logger name="org.openqa.selenium" level="WARN"/>
        <Logger name="org.apache.http" level="WARN"/>
        <Logger name="org.reflections" level="ERROR"/>
        <Logger name="com.github.vedenin" level="ERROR"/>
        <Logger name="io.netty" level="WARN"/>
    </Loggers>
</Configuration>